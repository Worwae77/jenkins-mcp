{
  "name": "jenkins-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Jenkins automation and management",
  "exports": "./src/index.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write src/index.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write src/index.ts",
    "build": "deno compile --allow-net --allow-env --allow-read --allow-write --output jenkins-mcp-server src/index.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write",
    "check": "deno check src/**/*.ts",
    "fmt": "deno fmt src/**/*.ts",
    "lint": "deno lint src/**/*.ts"
  },
  "imports": {
    "@std/": "https://deno.land/std@0.208.0/",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@0.4.0",
    "zod": "npm:zod@^3.22.4"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  }
}

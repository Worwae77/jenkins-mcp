{
  "name": "jenkins-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Jenkins automation and management",
  "exports": "./src/index.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write src/simple-server.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write src/simple-server.ts",
    "build": "deno compile --allow-net --allow-env --allow-read --allow-write --output jenkins-mcp-server src/simple-server.ts",
    "build:linux": "deno compile --allow-net --allow-env --allow-read --allow-write --target x86_64-unknown-linux-gnu --output jenkins-mcp-server-linux-x64 src/simple-server.ts",
    "build:macos": "deno compile --allow-net --allow-env --allow-read --allow-write --target x86_64-apple-darwin --output jenkins-mcp-server-macos-x64 src/simple-server.ts",
    "build:macos-arm": "deno compile --allow-net --allow-env --allow-read --allow-write --target aarch64-apple-darwin --output jenkins-mcp-server-macos-arm64 src/simple-server.ts",
    "build:windows": "deno compile --allow-net --allow-env --allow-read --allow-write --target x86_64-pc-windows-msvc --output jenkins-mcp-server-windows-x64.exe src/simple-server.ts",
    "build:all": "deno task build:linux && deno task build:macos && deno task build:macos-arm && deno task build:windows",
    "docker:build": "docker build -t jenkins-mcp-server:latest .",
    "docker:test": "./test-docker.sh",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write",
    "check": "deno check src/**/*.ts",
    "fmt": "deno fmt src/**/*.ts",
    "lint": "deno lint src/**/*.ts"
  },
  "imports": {
    "@std/": "https://deno.land/std@0.208.0/",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@0.4.0",
    "zod": "npm:zod@^3.22.4"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "deno.window"
    ],
    "strict": true
  }
}
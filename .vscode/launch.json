{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jenkins MCP Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/simple-server.ts",
            "runtime": "deno",
            "runtimeArgs": [
                "run",
                "--allow-all",
                "--inspect-wait"
            ],
            "env": {
                "JENKINS_URL": "https://your-jenkins.com",
                "JENKINS_USERNAME": "your-username",
                "JENKINS_API_TOKEN": "your-api-token",
                "JENKINS_TIMEOUT": "30000",
                "JENKINS_RETRIES": "3",
                "LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "outputCapture": "std",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Test MCP Tools",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/simple-server.ts",
            "runtime": "deno",
            "runtimeArgs": [
                "run",
                "--allow-all"
            ],
            "env": {
                "JENKINS_URL": "http://jenkins1.lab.127.0.0.1.nip.io",
                "JENKINS_USERNAME": "admin",
                "JENKINS_API_TOKEN": "116ff6632677def8eed7140bf738d859ce",
                "LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "outputCapture": "std",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 2
            },
            "preLaunchTask": "Check TypeScript"
        }
    ]
}
{
    "mcpServers": {
        "jenkins-mcp-server": {
            "command": "deno",
            "args": [
                "run",
                "--allow-all",
                "/path/to/your/jenkins-mcp/src/simple-server.ts"
            ],
            "env": {
                "JENKINS_URL": "https://your-jenkins.com",
                "JENKINS_USERNAME": "your-username",
                "JENKINS_API_TOKEN": "your-api-token",
                "JENKINS_TIMEOUT": "30000",
                "JENKINS_RETRIES": "3",
                "LOG_LEVEL": "info"
            }
        }
    }
}